<!DOCTYPE html>
<html lang="en">
  
  <%- include('./parts/pageHead.ejs') %>

  <body>
    <div class="container">

      <div class="header">
        <img src="/images/web.png" alt="<%= title %>" class="icon" />
        <h1><%= title %></h1>
        <p>Make your URL Smaller !</p>
      </div>

      <div class="content">
        <form method="POST" action="/new">
          <div class="mb-3 input-group">
            <input type="text" placeholder="Enter the URL to be shortened" name="url" class="form-control"/>
            <div class="input-group-append">
              <button class="btn btn-primary" type="submit">Shorten</button>
            </div>
          </div>
        </form>
      </div>

    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
