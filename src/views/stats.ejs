<!DOCTYPE html>
<html lang="en">
  <%- include('parts/pageHead.ejs') %>

  <body>
    <div class="container">
      <div class="header">
        <img src="/images/web.png" alt="Link Shortener" class="icon" />
        <h1>Link Shortener</h1>
        <p>Make your URL Smaller !</p>
      </div>

      <div class="stats">
        <p>
          <b> <%= process.env.DOMAIN %><%= code %> </b>
        </p>

        <p>
          Redirect to:<br />
          <%= url %>
        </p>
        <div class="statsRow">
          <div class="statsBox">
            <b> <%= hits %> </b>
            <p>Visits</p>
          </div>

          <div class="statsBox">
            <p>Last visit</p>
            <b> <%= updatedAt %> </b>
          </div>
        </div>
        <a href="/" class="btn btn-primary">Shortener a new URL</a>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
